<Window x:Class="Kikelet_Panzió.WindowLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kikelet_Panzió"
        mc:Ignorable="d"
        Title="WindowLogin" Height="250" Width="300">
    <Window.Resources>

        <Style TargetType="StackPanel">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <StackPanel>
        <StackPanel x:Name="spName">
            <TextBlock>Felhasználónév:</TextBlock>
            <TextBox x:Name="tbName"/>
        </StackPanel>
        <StackPanel x:Name="spPassword">
            <TextBlock>Jelszó:</TextBlock>
            <PasswordBox x:Name="pbPassword"/>
        </StackPanel>
        <Button x:Name="btnLogin" Content="Bejelentkezés" Click="btnLogin_Click"/>
    </StackPanel>
</Window>
